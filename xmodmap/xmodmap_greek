! REMAP RIGHT ALT TO MODE-SWITCH
clear mod1
clear mod5
add mod1 = Alt_L
keycode 108 = Mode_switch

! GET ->, => AND :: FOR HASKELL-ING
keycode 20 = minus underscore 0x01002192
keycode 21 = equal plus 0x010021d2
keycode 47 = semicolon colon 0x01002237

