
## set up the correct number of screens
/home/ross/.scripts/screens &

## Turn down the brightness
xbacklight =25

## This enables window transparency
xcompmgr -cCfF -D 6&

## Swaps some keys around
## Makes caps lock into a launcher key
xmodmap /home/ross/.Xmodmap

## Set up my custom global keyboard shortcuts
# /home/ross/.scripts/persist xbindkeys -n &

numlockx on

## Enable my wicked triple finger swipe gestures
##touchegg &

## set correct pointer for wm windows
xsetroot -cursor_name left_ptr

## set xresources
xrdb -merge ~/.Xresources

#export PATH

#############
## Autostarts
#############

## Kupfer is my launcher
/home/ross/.scripts/persist kupfer --no-splash &

_xmonad_status_pipe1=/tmp/xmonad_status_pipe1
[[ -S $_xmonad_status_pipe1 ]] || mkfifo $_xmonad_status_pipe1
xmobar /home/ross/.xmobarrc1 &

_xmonad_status_pipe2=/tmp/xmonad_status_pipe2
#[[ -S $_xmonad_status_pipe2 ]] || mkfifo $_xmonad_status_pipe2
ln -s /dev/null $_xmonad_status_pipe2
