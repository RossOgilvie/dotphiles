###############
## Set-up
###############

## Turn down the brightness
xbacklight =10 &

## Set up the screens and then lock
(/home/ross/.scripts/screens ; /home/ross/.scripts/lock-screen) &

## This enables window transparency
compton -cCfF &

## Turn on the numlock
numlockx on &

## Set fan to max
samsung-tools --cpu overclock

## Start a daemon script that sets up keyboards
/home/ross/.scripts/keyboard-setup &

## Enable my wicked triple finger swipe gestures
libinput-gestures-setup start &

## set correct pointer for wm windows
xsetroot -cursor_name left_ptr &

## set xresources
xrdb -merge ~/.dotphiles/xinit/Xresources &

#############
## Autostarts
#############

## Kupfer is my launcher
# Run it persistently so it can't be killed.
/home/ross/.scripts/persist kupfer --no-splash &

#cairo-dock &
#plank &

## For automounting usb drives
udiskie -2 -a -T -N &

## So explorer windows open quickly
# thunar --daemon &
